$("#widget-<%= @widget.widget['id'] %>-data").hide()
$("#<%= @widget.widget['id']%>-widgetForm").modal('hide');
$("table#widgets tbody").prepend("<%= escape_javascript render(:partial => 'dashboard/widget', :locals => { widget: @widget.widget }) %>");
$("#widget-<%= @widget.widget['id']%>-status").removeClass("bg-info")
$("#widget-<%= @widget.widget['id']%>-status").removeClass("bg-primary")
$("#widget-<%= @widget.widget['id']%>-status").addClass("bg-success")
$("#widget-<%= @widget.widget['id']%>-status").html("UPDATED")
