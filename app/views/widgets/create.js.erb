$("#widgetForm").modal('hide');
$('#widget-form input[type="text"]').val('')
$("table#widgets tbody").prepend("<%= escape_javascript render(:partial => 'dashboard/widget', :locals => { widget: @widget.widget }) %>");
$("#widget-<%= @widget.widget['id']%>-status").removeClass("bg-info")
$("#widget-<%= @widget.widget['id']%>-status").addClass("bg-primary")
$("#widget-<%= @widget.widget['id']%>-status").html("NEW")
