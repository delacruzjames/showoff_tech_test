<div class="modal fade" id="widgetForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag widgets_path, method: :post do %>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Widget Form</h5>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= text_field_tag 'widget[name]', nil, class: "form-control", placeholder: "Widget Name" %>
          </div>
          <div class="form-group">
            <%= text_field_tag 'widget[description]', nil, class: "form-control", placeholder: "Description" %>
          </div>
          <div class="form-group">
            <%= label_tag 'widget[kind]', "Kind", class: "input-group-text" %>
            <%= select_tag 'widget[kind]', options_for_select([["Hidden","hidden"], ["Visible","visible"]]) %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= submit_tag "SAVE", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
